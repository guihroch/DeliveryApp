<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Custom_EditText_Form">
        <item name="maxLines">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
       <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="Custom_ProgressBar">
        <item name="android:indeterminateTint">@color/white</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    //LoginPage
    <style name="Medium_Text_Login_Page">
        <item name="fontFamily">casual</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Big_Text_Login_Page">
        <item name="fontFamily">casual</item>
        <item name="android:textColor">@color/dark_red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">46sp</item>

        <item name="android:layout_marginTop">100dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Container_Cadastrar_Login_Page">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Button_Login_Page" >
        <item name="android:layout_marginHorizontal" tools:targetApi="o">20dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/dark_red</item>
        <item name="background">@color/dark_red</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">casual</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    //Cadastro Page
    <style name="Medium_Text_Cadastro_Page">
        <item name="fontFamily">casual</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Big_Text_Cadastro_Page">
        <item name="fontFamily">casual</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">46sp</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Button_Cadastro_Page" >
        <item name="android:layout_marginHorizontal" tools:targetApi="o">20dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@color/dark_red</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">casual</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="ic_cadastro_page">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:src">@drawable/ic_arrow_back</item>
    </style>

    //Home Page
    <style name="Small_Text_Home_Page">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">casual</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">35dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Medium_Text_Home_Page">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">casual</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="MaterialCard_Promocao_Home_Page">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">180dp</item>
        <item name="cardCornerRadius">30dp</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">20dp</item>
    </style>

    <style name="ImageView_Promocao_Home_Page">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/imagem_pizza_promocao</item>
    </style>

    <style name="Text_Promocao_Home_Page">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">casual</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

 <style name="MaterialCard_Categorias_Home_Page">
     <item name="android:layout_width">150dp</item>
     <item name="android:layout_height">100dp</item>
     <item name="android:orientation">vertical</item>
<item name="android:layout_weight">1</item>
     <item name="strokeColor">@color/light_grey</item>
     <item name="android:layout_marginHorizontal" tools:targetApi="o">20dp</item>
 </style>

    <style name="ImageView_Categoria_Home_Page">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="Container_Categorias_Home_Page">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="RecyclerView_Home_Page">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">10dp</item>
        <item name="android:orientation">horizontal</item>
            </style>









    <style name="font_media_bold_detalhes_page" >
        <item name="fontFamily">casual</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="font_media_light">
        <item name="fontFamily">casual</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="font_small_home_page">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">casual</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>



</resources>