<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.LoginPage">

    <ImageView
        android:id="@+id/ic_retornar_login"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp"
        android:src="@drawable/ic_arrow_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/txt_foodie"
        android:text="Cadastro"
        android:fontFamily="casual"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="46sp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        style="@style/Textview_login_cadastro"
        android:id="@+id/textView_nome"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="260dp"
        android:text="Nome Completo"
        />
    <EditText
        style="@style/EditText_Form"
        android:id="@+id/edit_nome"
        android:background="@drawable/edit_text_shape"
        app:layout_constraintTop_toBottomOf="@id/textView_nome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        style="@style/Textview_login_cadastro"
        android:id="@+id/textView_email"
        app:layout_constraintTop_toBottomOf="@id/edit_nome"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Email"
        android:layout_marginTop="20dp"
        />
    <EditText
        style="@style/EditText_Form"
        android:id="@+id/edit_email"
        android:background="@drawable/edit_text_shape"
        app:layout_constraintTop_toBottomOf="@id/textView_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        style="@style/Textview_login_cadastro"
        android:layout_marginTop="20dp"
        android:text="Senha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_email"/>

    <EditText
        android:id="@+id/edit_senha"
        android:layout_marginTop="40dp"
        android:background="@drawable/edit_text_shape"
        app:layout_constraintTop_toBottomOf="@id/edit_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/EditText_Form"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:visibility="visible"
        android:id="@+id/container_cadastrar"
        style="@style/Button_shape"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/dark_red"
        android:layout_marginTop="40dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_senha"
        >

        <TextView
            android:text="Cadastrar"
            android:fontFamily="casual"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:visibility="gone"
        android:id="@+id/container_progressBar"
        style="@style/Button_shape"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/dark_red"
        android:layout_marginTop="40dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_senha"
        >

        <ProgressBar
            android:id="@+id/progressBar"
            android:indeterminateTint="@color/white"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.constraintlayout.widget.ConstraintLayout>